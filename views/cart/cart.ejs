<% layout('layouts/boilerplate') -%>

    <section class="container">
        <section id="heading">
            <h4 class="display-4"><i class="fa-solid fa-cart-shopping" style="margin-right: 20px;"></i>My-Cart</h4>
        </section>
        <div class="row">
            <div class="col-lg-8">

                <% for(let item of user.cart){%>
                    <div class="card mx-auto mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-4">
                                <img src="<%=item.img%>" class="img-fluid rounded-start" alt="...">
                            </div>
                            <div class="col-8">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%=item.name%>
                                    </h5>
                                    <form class="d-inline-block" action="/user/<%=item._id%>?_method=DELETE" method="POST">
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <%} %>
            </div>
            <div class="col-lg-4">
                <ul class="list-group">
                    <% for(let item of user.cart) {%>
                        <li class="list-group-item"><span class="fw-bold">
                                <%=item.name%> -
                            </span>$ <%=item.price%> <span></span></li>
                        <% } %>
                            <li class="list-group-item fw-bold">Total Amount : $ <%=totalAmount%>
                            </li>
                </ul>
                <button class="btn btn-sm btn-success my-3">Checkout</button>
            </div>
        </div>


    </section>